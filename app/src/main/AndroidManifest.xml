<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.weichen2046.filesender2">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".MyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <service
            android:name=".service.ServiceManager"
            android:enabled="true"
            android:exported="false" />

        <activity
            android:name=".ui.PcListActivity"
            android:exported="false"
            android:parentActivityName=".MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.weichen2046.filesender2.MainActivity" />
        </activity>

        <service
            android:name=".service.SocketTaskService"
            android:exported="false" />
        <service
            android:name=".service.AuthenticationHandleService"
            android:enabled="true"
            android:exported="false" />
        <service
            android:name=".debug.DebugService"
            android:process=":debugservice"
            android:enabled="true"
            android:exported="true">
            <intent-filter>
                <action android:name="com.weichen2046.filesender2.debugservice" />
            </intent-filter>
        </service>
    </application>

</manifest>